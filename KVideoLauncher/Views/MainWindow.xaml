<hc:Window x:Class="KVideoLauncher.Views.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:vm="clr-namespace:KVideoLauncher.ViewModels"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           mc:Ignorable="d"
           Title="KVideoLauncher"
           WindowState="Maximized"
           WindowStartupLocation="CenterScreen"
           d:DesignWidth="800"
           d:DesignHeight="450"
           SystemBackdropType="Mica"
           PreviewMouseDown="ListBoxMouseDown">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="ListBox"
               BasedOn="{StaticResource ListBoxBaseStyle}">
            <Style.Triggers>
                <Trigger Property="IsFocused"
                         Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource ListBoxFocusedBackground}" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Focusable"
                    Value="True" />
        </Style>
    </Window.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*"
                              x:Name="ColDirectories" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*"
                              x:Name="ColVideos" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*"
                              x:Name="ColPlaylist" />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0"
                 x:Name="ListDrives" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0"
                     x:Name="ListPath">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <ListBox Grid.Row="2"
                     x:Name="ListDirectories" />
        </Grid>

        <ListBox Grid.Column="4"
                 x:Name="ListVideos" />

        <Grid Grid.Column="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Row="0"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     x:Name="ListPlaylist" />
            <StackPanel Grid.Row="2"
                        Grid.Column="0"
                        Orientation="Horizontal">
                <Button hc:IconElement.Geometry="{StaticResource LeftGeometry}"
                        ToolTip="Previous playlist"
                        Margin="0 0 5 0" />
                <Button hc:IconElement.Geometry="{StaticResource RightGeometry}"
                        ToolTip="Next playlist"
                        Margin="0 0 5 0" />
                <Button FontFamily="{StaticResource IconFontFamily}"
                        Content="&#xe654;"
                        FontSize="16"
                        ToolTip="Current playlist" />
            </StackPanel>

            <Button Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource ButtonPrimary}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="{StaticResource IconFontFamily}"
                               FontSize="16"
                               Text="&#xea82;"
                               Margin="0 0 5 0" />
                    <TextBlock Text="Play" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</hc:Window>